
@{
    ViewData["Title"] = "BrowseCountry";
    Layout = "~/Views/Shared/_AppLayout.cshtml";
}


<div class="row border-gray-dark">
    <input type="hidden" id="hdnCountryId" value="" />
    <input type="hidden" id="hdnPopulation" value="0" />
    <div class="main">
        <h2 class="text-center mb-3">Browse Country</h2>
        <!-- Actual search box -->
        <div class="form-group has-feedback has-search">
            <span class="glyphicon glyphicon-search form-control-feedback"></span>
            <input type="text" id="tags" class="form-control" placeholder="Start entering country..." style="font-size: 14px;"/>
        </div>
    </div>
</div>
<div class="row mb-4" id="div-details" style="display:none;">
    <div class="col-sm-12">
        <button id="btn-favorite" href="javascript:void(0);" class="btn btn-primary" style="float: right;margin-top: 8px;">
            <span class="text-right" style="float: right;font-size: 11px;">Add to Favourites</span>
        </button>
        <div>
            <h4 class="mt-3 text-normal">Information about Country</h4>
            <div class="box mb-3" id="div-country">

            </div>
            <h4 class="mt-3 text-normal">Languages Details</h4>
            <div class="box mb-3">
                <div class="col-sm-12 mb-2">
                    <i class="icon-activity"></i> Languages Spoken
                </div>
                <div class="col-sm-12 f6" id="dvLanguages">
                </div>
            </div>
            <h4 class="mt-3 text-normal">Currency Details</h4>
            <div class="box mb-3">
                <div class="col-sm-12 mb-2">
                    <i class="icon-activity"></i> Currencies Used
                </div>
                <div class="col-sm-12 f6" id="dvCurrencies">
                </div>
            </div>
        </div>
    </div>
</div>
@section styles {
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
}
@section scripts {
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <script type="text/javascript" src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script src="~/scripts/browse-country.js"></script>
}