
@{
    ViewData["Title"] = "ForgotPassword";
    Layout = "~/Views/Shared/_Authentication.cshtml";
}
<form class="form-signin">
    <div class="text-center mb-2">
        <h1 class="h3 mb-3">My Country</h1>
    </div>
    <div id="auth-forgot">
        <div class="form-signin-body">
            <p><b>Forgot your password</b></p>
            <p>Enter your email address and we will send you a link to reset your password.</p>
            <p style="color:gray;font-size: 11px;"><b>Note:</b> No email/messaging services are integrated, So user will be redirected to reset passowrd directly.</p>
            <div class="form-label-group">
                <input type="text" id="input-email" class="form-control" placeholder="Username or email address" required autofocus>
                <label for="inputForgot">Email address</label>
            </div>
            <div class="alert alert-success" role="alert" id="alert-error" style="display:none;">
            </div>
            <button class="btn btn-lg btn-success btn-block" id="btn-forgot-pwd" type="submit">Send password reset link</button>
        </div>
        <p class="create-account-body mt-3">
            Remembered password?
            <a href="/">Sign In</a>
        </p>
    </div>
</form>
@section scripts {
    <script src="~/scripts/Authentication/forgot-password.js"></script>
}

